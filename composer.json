{
    "name": "typisttech/codeception-composer-project-module",
    "type": "library",
    "description": "Create throw away composer projects for Codeception tests",
    "keywords": [
        "BDD",
        "composer",
        "codeception module",
        "TDD",
        "testing"
    ],
    "homepage": "https://www.typist.tech/projects/codeception-composer-project-module",
    "license": "MIT",
    "authors": [
        {
            "name": "Typist Tech",
            "email": "codeception-composer-project-module@typist.tech",
            "homepage": "https://www.typist.tech"
        },
        {
            "name": "Tang Rufus",
            "email": "tangrufus@gmail.com",
            "homepage": "https://www.typist.tech",
            "role": "Developer"
        }
    ],
    "support": {
        "email": "codeception-composer-project-module@typist.tech",
        "issues": "https://github.com/TypistTech/codeception-composer-project-module/issues",
        "source": "https://github.com/TypistTech/codeception-composer-project-module"
    },
    "require": {
        "php": "^7.0",
        "spatie/temporary-directory": "^1.1"
    },
    "require-dev": {
        "codeception/aspect-mock": "^2.0",
        "codeception/base": "^2.2",
        "squizlabs/php_codesniffer": "^2.8"
    },
    "autoload": {
        "psr-4": {
            "Codeception\\Module\\": "src/"
        }
    },
    "scripts": {
        "check-style": "phpcs --standard=ruleset.xml --colors -p -s .",
        "fix-style": "phpcbf -p --standard=ruleset.xml --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 .",
        "pre-tag": [
            "composer update",
            "doctoc README.md",
            "github_changelog_generator --no-verbose"
        ],
        "test": "codecept run"
    },
    "config": {
        "sort-packages": true
    }
}
